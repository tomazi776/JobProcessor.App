@model JobProcessor.App.ViewModels.JobDetailsVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h3 class="m-5" style="text-align:center">Job "@Model.Job.Name" details</h3>
        </div>
        <div class="col-2"></div>
    </div>
    <div class="row jumbotron">
        <div class="col-4"></div>
        <table class="col-2 desc">
            <tr><td>@Html.DisplayNameFor(model => model.Job.Id)</td></tr>
            <tr><th>@Html.DisplayNameFor(model => model.Job.Name)</th></tr>
            <tr><th>@Html.DisplayNameFor(model => model.Job.Counter)</th></tr>
            <tr><th>@Html.DisplayNameFor(model => model.Job.DoAfter)</th></tr>
            <tr><th>@Html.DisplayNameFor(model => model.Job.CreatedAt)</th></tr>
            <tr><th>@Html.DisplayNameFor(model => model.Job.UpdatedAt)</th></tr>
            <tr><th>@Html.DisplayNameFor(model => model.Job.ProcessedAt)</th></tr>
        </table>
        <table class="col-3">
            <tr><th>@Html.DisplayFor(model => model.Job.Id)</th></tr>
            <tr><th>@Html.DisplayFor(model => model.Job.Name)</th></tr>
            <tr><th>@Html.DisplayFor(model => model.Job.Counter)</th></tr>
            <tr><th class="nullable">@Html.DisplayFor(model => model.Job.DoAfter)</th></tr>
            <tr><th>@Html.DisplayFor(model => model.Job.CreatedAt)</th></tr>
            <tr><th>@Html.DisplayFor(model => model.Job.UpdatedAt)</th></tr>
            <tr><th class="nullable">@Html.DisplayFor(model => model.Job.ProcessedAt)</th></tr>
        </table>
        <div class="col-3"></div>
        <div class="m-auto">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Job.Id }, new { @class = "btn btn-outline-dark btn-lg mt-5" })
        </div>
    </div>
</div>
@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-outline-info" })

<script src="~/Scripts/jquery-3.4.1.js"></script>

@section scripts{

    <script>
        $(document).ready(function () {
            $('.nullable').html('NULL')
            $('.desc').children().css({ 'font-style': 'italic' })
        })
    </script>

}
