@model JobProcessor.App.ViewModels.JobsVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Jobs</h1>
<nav aria-label="Page navigation">
    <div class="container">
        <div class="row">
            <div class="col-5"></div>
            <div class="col-5">
                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-dark btn-lg " })
                </p>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</nav>

<table id="jobsTable" class="table">
    <tr>
        <th class="text-black-50">
            #
        </th>
        <th class="text-black-50">
            @Html.DisplayNameFor(Model => Model.Job.Name)
        </th>
        <th class="text-black-50">
            @Html.DisplayNameFor(Model => Model.Job.Status)
        </th>
        <th class="text-black-50">
            @Html.DisplayNameFor(Model => Model.Job.Counter)
        </th>
        <th class="text-black-50">
            Action
        </th>
    </tr>

    @{
        int currentPageSize = Model.Metadata.PageSize;
        int currentPageStartIndex = Model.Metadata.StartIndex;
    }
    @foreach (var job in Model.Jobs)
    {
        currentPageStartIndex++;
        <tr>
            <th class="col-2">
                @currentPageStartIndex
            </th>
            <th class="text-monospace col-4">@job.Name</th>
            <th class="col-2">@job.Status</th>
            <th class="col-2">@job.Counter</th>
            <td class="col-2">
                @Html.ActionLink("Details", "Details", new { id = job.Id }, new { @class = "btn btn-outline-dark btn-sm " })
            </td>
        </tr>
    }

</table>
<div class="container">
    <div class="row">
        <div class="col-8"></div>
        <div class="col-4">
            <ul class="pagination">
                <li>
                    @if (Model.HasRecords(JobProcessor.App.ViewModels.Navigation.Previous))
                    {
                        int backPageIndex = Model.SetBackPageIndex();
                        @Html.ActionLink("Previous", "Index",
                       new
                            {
                                startIndex = backPageIndex,
                           pageSize = currentPageSize
                            },
                       new { @class = "btn btn-outline-dark", id = "nextPageBtn" })
                    }
                </li>
                <li><a class="btn btn-outline-secondary disabled" href="#">1</a></li>
                <li><a class="btn btn-outline-info" href="#">2</a></li>
                <li><a class="btn btn-outline-info" href="#">3</a></li>
                <li><a class="btn btn-outline-info" href="#">4</a></li>
                <li><a class="btn btn-outline-info" href="#">5</a></li>
                <li>
                    @if (Model.HasRecords(JobProcessor.App.ViewModels.Navigation.Next))
                    {
                        @Html.ActionLink("Next", "Index",
                       new
                            {
                                startIndex = currentPageStartIndex,
                       pageSize = currentPageSize
                            },
                       new { @class = "btn btn-outline-dark" })
                    }
                </li>
            </ul>
        </div>
    </div>
</div>






